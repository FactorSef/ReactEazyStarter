{
  "endOfLine": "lf",
  "tabWidth": 4,
  "useTabs": true,
  "printWidth": 180,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true
      }
    }
  ]
}
