{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "useDefineForClassFields": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "./app/*"],
    },
    "typeRoots": ["./typings", "node_modules/@types"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"],
}
