{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": true, // Add to compile .js files
    "checkJs": false, // Report errors in .js files
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "./app/*",
        "./typings/*",
      ],
    },
    "typeRoots": [
      "node_modules/@types",
      "./typings",
    ],
  },
  "include": [
    "app/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "./config/*",
    "./babel.config.js"
  ]
}
